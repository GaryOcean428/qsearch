{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.11"
  },
  "steps": {
    "build": {
      "commands": [
        { "cmd": "uv sync --frozen --no-dev" }
      ]
    }
  },
  "deploy": {
    "startCommand": "python -m uvicorn qsearch.api.main:app --host 0.0.0.0 --port $PORT",
    "variables": {
      "PYTHONUNBUFFERED": "1"
    }
  }
}
