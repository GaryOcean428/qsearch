{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.11"
  },
  "steps": {
    "build": {
      "commands": [
        { "cmd": "uv sync --no-dev" }
      ]
    }
  },
  "deploy": {
    "startCommand": "python -m gunicorn qsearch.api.main:app -k uvicorn.workers.UvicornWorker --bind [::]:$PORT --workers 2 --threads 4",
    "variables": {
      "PYTHONUNBUFFERED": "1"
    }
  }
}
