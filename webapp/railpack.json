{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20"
  },
  "steps": {
    "clean": {
      "commands": [
        { "cmd": "rm -rf node_modules dist .vite .cache .turbo" }
      ]
    },
    "install": {
      "inputs": [{ "step": "clean" }],
      "commands": [
        { "src": ".", "dest": "." },
        "npm install"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        { "cmd": "npm run build" }
      ]
    }
  },
  "deploy": {
    "inputs": [{ "step": "build" }],
    "startCommand": "npm run preview -- --host 0.0.0.0 --port $PORT",
    "variables": {
      "NODE_ENV": "production",
      "VITE_QSEARCH_API_BASE": ""
    }
  }
}
