{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20"
  },
  "steps": {
    "clean": {
      "commands": [
        { "cmd": "rm -rf node_modules dist .vite .cache .turbo .yarn" }
      ]
    },
    "install": {
      "inputs": [{ "step": "clean" }],
      "commands": [
        { "src": "package.json", "dest": "package.json" },
        { "src": "yarn.lock", "dest": "yarn.lock" },
        { "src": ".yarnrc.yml", "dest": ".yarnrc.yml" },
        { "src": "vite.config.ts", "dest": "vite.config.ts" },
        { "src": "tsconfig.json", "dest": "tsconfig.json" },
        { "src": "tailwind.config.ts", "dest": "tailwind.config.ts" },
        { "src": "postcss.config.js", "dest": "postcss.config.js" },
        { "src": "index.html", "dest": "index.html" },
        { "src": "src", "dest": "src" },
        { "cmd": "corepack enable && yarn install --immutable" }
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        { "cmd": "yarn build" }
      ]
    }
  },
  "deploy": {
    "inputs": [{ "step": "build" }],
    "startCommand": "yarn preview --host 0.0.0.0 --port $PORT",
    "variables": {
      "NODE_ENV": "production",
      "VITE_QSEARCH_API_BASE": ""
    }
  }
}
